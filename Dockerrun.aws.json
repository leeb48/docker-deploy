{
  "AWSEBDockerrunVersion": 2,
  "containerDefinitions": [
    {
      "name": "client",
      "image": "bongster228/docker-deploy-client",
      "hostname": "client",
      "essential": false,
      "memory": 128
    },
    {
      "name": "api",
      "image": "bongster228/docker-deploy-api",
      "hostname": "api",
      "essential": "false",
      "memory": 128
    },
    {
      "name": "nginx",
      "image": "bongster228/docker-deploy-nginx",
      "hostname": "nginx",
      "essential": true,
      "portMappings": [
        {
          "hostPort": 80,
          "containerPort": 80
        }
      ],
      "links": ["client, api"],
      "memory": 128
    }
  ]
}
